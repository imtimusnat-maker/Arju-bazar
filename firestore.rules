/**
 * @fileoverview Firestore Security Rules for Your Shop.
 *
 * Core Philosophy:
 * This ruleset enforces a multi-tenant data model where users own their profiles and orders.
 * Products, categories, and subcategories are publicly readable but only modifiable by a designated admin.
 *
 * Data Structure:
 * - /categories/{categoryId}: Stores product categories.
 * - /subcategories/{subcategoryId}: Stores subcategories for all categories.
 * - /products/{productId}: Stores product information.
 * - /users/{userId}: Stores user profiles.
 * - /users/{userId}/orders/{orderId}: Stores orders placed by a user.
 * - /users/{userId}/orders/{orderId}/orderItems/{orderItemId}: Stores items within an order.
 *
 * Key Security Decisions:
 * - A specific user UID is designated as the admin.
 * - Only the admin can create, update, or delete products and categories.
 * - All users (including anonymous) can read products and categories.
 * - Authenticated users can only read/write their own profile and order data.
 * - Listing of users is disallowed.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user's UID matches the provided userId.
     * @param {string} userId The user ID to compare against the authenticated user's UID.
     * @return {boolean} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

     /**
      * @description Checks if the user is the owner of an existing document.
      * @param {string} userId The user ID to compare against the authenticated user's UID.
      * @return {boolean} True if the user is the owner and the document exists, false otherwise.
      */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Checks if the authenticated user is the designated admin.
     * @return {boolean} True if the user is the admin, false otherwise.
     */
    function isAdmin() {
        return request.auth.uid == 'BS1kBWdHZ4cE43xsC36iglVcjL22';
    }

    /**
     * @description Grants public read access, but restricts write access to admins only.
     * @path /categories/{categoryId}
     */
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    /**
     * @description Grants public read access, but restricts write access to admins only for subcategories.
     * @path /subcategories/{subcategoryId}
     */
    match /subcategories/{subcategoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Grants public read access, but restricts write access to admins only.
     * @path /products/{productId}
     */
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    /**
     * @description Grants public read access, but restricts write access to admins only for settings.
     * @path /settings/{settingId}
     */
    match /settings/{settingId} {
      allow get: if true;
      allow list: if false; // Only a single 'global' settings doc is expected
      allow write: if isAdmin();
    }

    /**
     * @description Grants access to a user's profile only to the authenticated user.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Disallow listing all users for security.
      allow create: if request.auth.uid == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Grants access to a user's orders only to the authenticated user.
     * @path /users/{userId}/orders/{orderId}
     */
    match /users/{userId}/orders/{orderId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Grants access to a user's order items only to the authenticated user.
     * @path /users/{userId}/orders/{orderId}/orderItems/{orderItemId}
     */
    match /users/{userId}/orders/{orderId}/orderItems/{orderItemId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}
