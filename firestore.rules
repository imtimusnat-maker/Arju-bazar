/**
 * @fileoverview Firestore Security Rules for Your Shop.
 *
 * Core Philosophy:
 * This ruleset enforces a multi-tenant data model where users own their profiles and orders.
 * Products, categories, and subcategories are publicly readable but only modifiable by a designated admin.
 * A collection group query on 'orders' is allowed for admins to manage all customer orders.
 *
 * Data Structure:
 * - /categories/{categoryId}: Stores product categories.
 * - /subcategories/{subcategoryId}: Stores subcategories for all categories.
 * - /products/{productId}: Stores product information.
 * - /users/{userId}: Stores user profiles and order/customer metadata.
 * - /users/{userId}/orders/{orderId}: Stores orders placed by a user.
 * - /users/{userId}/orders/{orderId}/orderItems/{orderItemId}: Stores items within an order.
 *
 * Key Security Decisions:
 * - A specific user UID is designated as the admin.
 * - Only the admin can create, update, or delete products and categories.
 * - All users (including anonymous) can read products and categories.
 * - Authenticated users can only read/write their own profile and order data.
 * - Admins have full read/write access to all data for management purposes.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user's UID matches the provided userId.
     * @param {string} userId The user ID to compare against the authenticated user's UID.
     * @return {boolean} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

     /**
      * @description Checks if the user is the owner of an existing document.
      * @param {string} userId The user ID to compare against the authenticated user's UID.
      * @return {boolean} True if the user is the owner and the document exists, false otherwise.
      */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Checks if the authenticated user is the designated admin.
     * @return {boolean} True if the user is the admin, false otherwise.
     */
    function isAdmin() {
        return request.auth.uid == 'BS1kBWdHZ4cE43xsC36iglVcjL22';
    }

    /**
     * @description Grants public read access for categories and restricts write access to admins.
     * @path /categories/{categoryId}
     */
    match /categories/{categoryId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    /**
     * @description Grants public read access for subcategories and restricts write access to admins.
     * @path /subcategories/{subcategoryId}
     */
    match /subcategories/{subcategoryId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Grants public read access for products and restricts write access to admins.
     * @path /products/{productId}
     */
    match /products/{productId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    /**
     * @description Grants public read access for the single settings doc, but restricts write access to admins only.
     * @path /settings/{settingId}
     */
    match /settings/{settingId} {
      allow get: if true;
      allow list: if false; // Only a single 'global' settings doc is expected
      allow write: if isAdmin();
    }

    /**
     * @description Grants access to a user's profile only to the authenticated user or an admin.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin(); // Allow admin to list users.
      allow create: if request.auth.uid == userId;
      allow update: if isExistingOwner(userId) || isAdmin();
      allow delete: if isExistingOwner(userId) || isAdmin();
      
      /**
       * @description Grants access to a user's orders only to the authenticated user or an admin.
       * A collection group query on 'orders' is permitted for admins.
       * @path /users/{userId}/orders/{orderId}
       */
      match /orders/{orderId} {
        allow get, list, create, update, delete: if isOwner(userId) || isAdmin();

        /**
         * @description Grants access to order items, inheriting parent permissions.
         * @path /users/{userId}/orders/{orderId}/orderItems/{orderItemId}
         */
        match /orderItems/{orderItemId} {
          allow read, write: if isOwner(userId) || isAdmin();
        }
      }
    }
  }
}
